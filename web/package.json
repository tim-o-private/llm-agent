{
  "name": "clarity-workspace",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev:api": "pnpm --filter @clarity/api dev",
    "dev:web": "pnpm --filter @clarity/web dev",
    "dev": "concurrently \"pnpm:dev:api\" \"pnpm:dev:web\" --names \"API,WEB\" --prefix-colors \"bgMagenta.bold,bgGreen.bold\"",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0"
    }
  }
} 