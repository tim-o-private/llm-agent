{
  "name": "llm-agent-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:chatServer": "mkdir -p logs && .venv/bin/python -m chatServer.main 2>&1 | tee logs/chatserver.log",
    "dev:webApp": "mkdir -p logs && pnpm --filter clarity-frontend dev 2>&1 | tee logs/webapp.log",
    "dev:ngrok": "ngrok start chatserver",
    "dev": "concurrently \"pnpm:dev:chatServer\" \"pnpm:dev:webApp\" \"pnpm:dev:ngrok\" --names \"SERVER,WEBAPP,NGROK\" --prefix-colors \"bgMagenta.bold,bgGreen.bold,bgCyan.bold\"",
    "prod:webApp": "flyctl deploy -c webApp/fly.toml --build-secret VITE_API_BASE_URL=https://clarity-chatserver.fly.dev --build-secret VITE_SUPABASE_ANON_KEY=$VITE_SUPABASE_ANON_KEY --build-secret VITE_SUPABASE_URL=$VITE_SUPABASE_URL",
    "prod:chatServer": "flyctl deploy -c chatServer/fly.toml",
    "prod": "pnpm run prod:webApp && pnpm run prod:chatServer"
  },
  "devDependencies": {
    "@dnd-kit/utilities": "^3.2.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@types/testing-library__react": "^10.2.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.0.0"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}